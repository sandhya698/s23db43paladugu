extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let carid = toShow._id 
    - let manufacturer= toShow.manufacturer
    - let model = toShow.model 
    - let price = toShow.price 
    - let actionid = "/resource/cars/" + carid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='cardelete') car ID is: 
        div #{carid} 
      div.row 
        div(class='cardelete') car  manufacturer is: 
        div #{manufacturer} 
      div.row 
        div(class='cardelete') car model is: 
        div #{model} 
      div.row 
        div(class='cardelete') car price is: 
        div #{price} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the car collection 
      window.location.href='/car' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      //Dont need a body for the delete 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/car' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    }